<style>
  #filters-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #ddd;
    background: #fff;
    padding: 0.5rem 1rem;
  }

  .filters-container {
    display: flex;
    align-items: center;
    position: relative;
    flex: 1;
    margin-right: 1rem;
  }

  #filters {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    scroll-behavior: smooth;
    gap: 1rem;
    flex: 1;
  }
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    padding: 0.5rem 0.8rem;
    border-radius: 0.8rem;
    transition: all 0.2s ease-in-out;
    opacity: 0.7;
    min-width: 70px;
  }
  .filter:hover {
    opacity: 1;
    background-color: #f8f8f8;
    cursor: pointer;
    transform: translateY(-2px);
  }
  .filter div {
    font-size: 1.4rem;
    margin-bottom: 0.3rem;
    color: #444;
  }
  .filter p {
    font-size: 0.8rem;
    font-weight: 500;
    margin: 0;
    color: #333;
  }
  .filter.active {
    opacity: 1;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    transform: translateY(-2px);
  }

  /* Arrows */
  .scroll-btn {
    background: white;
    border: 1px solid #ddd;
    border-radius: 50%;
    width: 2.2rem;
    height: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
    z-index: 10;
  }
  .scroll-btn:hover {
    background: #f0f0f0;
  }
  .scroll-left { left: -1rem; }
  .scroll-right { right: -1rem; }

  /* Switch */
  .tax-toggle {
    border: 1px solid #ccc;
    border-radius: 1rem;
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .scroll-btn {
      display: none;
    }
  }
</style>
