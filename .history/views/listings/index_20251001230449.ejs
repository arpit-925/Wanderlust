<style>
  /* Filter bar container */
  #filters-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #ddd;
    padding: 0.5rem 1rem;
    background: #fff;
  }

  /* Filters scroll area */
  .filters-container {
    display: flex;
    align-items: center;
    flex: 1;
    position: relative;
    margin-right: 1rem;
  }

  #filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scrollbar-width: none; /* firefox */
    -ms-overflow-style: none; /* IE/Edge */
    scroll-behavior: smooth;
    gap: 1rem;
    flex: 1;
  }
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    padding: 0.5rem 0.8rem;
    border-radius: 0.8rem;
    transition: all 0.2s ease-in-out;
    opacity: 0.7;
    min-width: 70px;
  }
  .filter:hover {
    opacity: 1;
    background-color: #f8f8f8;
    cursor: pointer;
    transform: translateY(-2px);
  }
  .filter div {
    font-size: 1.4rem;
    margin-bottom: 0.3rem;
    color: #444;
  }
  .filter p {
    font-size: 0.8rem;
    font-weight: 500;
    margin: 0;
    color: #333;
  }
  .filter.active {
    opacity: 1;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    transform: translateY(-2px);
  }

  /* Scroll buttons */
  .scroll-btn {
    background: white;
    border: 1px solid #ddd;
    border-radius: 50%;
    width: 2.2rem;
    height: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
    z-index: 10;
  }
  .scroll-btn:hover {
    background: #f0f0f0;
  }
  .scroll-left {
    left: -1rem;
  }
  .scroll-right {
    right: -1rem;
  }

  /* Switch (fixed at right) */
  .tax-toggle {
    border: 1px solid #ccc;
    border-radius: 1rem;
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .scroll-btn {
      display: none; /* Hide arrows on mobile */
    }
  }
</style>

<!-- Wrapper around filters + switch -->
<div id="filters-wrapper">
  <div class="filters-container">
    <button class="scroll-btn scroll-left"><i class="fa-solid fa-chevron-left"></i></button>

    <div id="filters">
      <div class="filter"><div><i class="fa-solid fa-fire"></i> </div><p>Trending</p></div>
      <div class="filter"><div><i class="fa-solid fa-bed"></i> </div><p>Rooms</p></div>
      <div class="filter"><div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic cities</p></div>
      <div class="filter"><div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p></div>
      <div class="filter"><div><i class="fa-solid fa-fort-awesome"></i> </div><p>Castles</p></div>
      <div class="filter"><div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing Pools</p></div>
      <div class="filter"><div><i class="fa-solid fa-campground"></i></div><p>Camping</p></div>
      <div class="filter"><div><i class="fa-solid fa-ship"></i> </div><p>Boats</p></div>
      <div class="filter"><div><i class="fa-solid fa-tractor"></i></div><p> Farms</p></div>
      <div class="filter"><div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p></div>
      <div class="filter"><div><i class="fa-solid fa-person-hiking"></i></div><p>Adventure</p></div>
      <div class="filter"><div><i class="fa-solid fa-igloo"></i></div><p>Domes</p></div>
    </div>

    <button class="scroll-btn scroll-right"><i class="fa-solid fa-chevron-right"></i></button>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<script>
  // Tax switch toggle
  let taxSwitch = document.getElementById('switchCheckDefault');
  taxSwitch.addEventListener('click', () => {
    let taxInfo = document.getElementsByClassName('tax-info');
    for (let info of taxInfo) {
      info.style.display = (info.style.display != "inline") ? "inline" : "none";
    }
  });

  // Active filter toggle
  const filters = document.querySelectorAll('.filter');
  filters.forEach(filter => {
    filter.addEventListener('click', () => {
      filters.forEach(f => f.classList.remove('active'));
      filter.classList.add('active');
    });
  });

  // Scroll buttons
  const filterContainer = document.getElementById('filters');
  const scrollLeftBtn = document.querySelector('.scroll-left');
  const scrollRightBtn = document.querySelector('.scroll-right');

  scrollLeftBtn.addEventListener('click', () => {
    filterContainer.scrollBy({ left: -200, behavior: 'smooth' });
  });
  scrollRightBtn.addEventListener('click', () => {
    filterContainer.scrollBy({ left: 200, behavior: 'smooth' });
  });
</script>
